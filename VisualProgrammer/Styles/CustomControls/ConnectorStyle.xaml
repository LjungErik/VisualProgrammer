<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:designView="clr-namespace:VisualProgrammer.Views.Restructure.Designer">

    <Style 
        TargetType="{x:Type designView:Connector}"
        >
        <Setter 
            Property="Hotspot"
            Value="{Binding Hotspot, Mode=OneWayToSource}"/>

        <Setter
            Property="ParentDesignView"
            Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type designView:DesignView}}, Path=.}"
            />

        <Setter
            Property="ParentNode"
            Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type designView:Node}}, Path=.}"
            />

        <Setter 
            Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type designView:Connector}">
                    <Grid>
                        <Rectangle
                            Fill="{StaticResource connectorBackgroundBrush}"/>
                        <ContentPresenter/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>